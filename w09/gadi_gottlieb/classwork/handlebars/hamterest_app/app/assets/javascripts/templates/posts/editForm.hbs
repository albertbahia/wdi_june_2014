<div id="card-info">
  <div class="image">
    <img src="{{image_url}}"
  </div>
</div>

<div id="card-update">
  <div>Title
    <input type="text", name="update-title" value='{{title}}'>
  </div>

  <div>Image
    <input type="text", name="update-image_url" value='{{image_url}}'>
  </div>

  <div>Content
    <input type="text", name="update-content" value='{{content}}'>
  </div>

  <div>Category
    <input type="text", name="update-category" value='{{category}}'>
  </div>

  <button id="update">Update!</button>

</div>
