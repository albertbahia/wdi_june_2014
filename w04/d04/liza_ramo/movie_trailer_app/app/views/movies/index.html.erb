<h1>Movies List</h1>

<form action="/movies/search" method="get">
  <input type="text" name="search">
  <input type="submit" value="Search">
</form>

<div>
<% @movies.each do |movie| %>
    <p><%= movie.title %></p>
    <p><%= movie.year %></p>
    <p><%= movie.plot %></p>
    <%= link_to image_tag(movie.poster_url), movie_path(movie) %>
<% end %>
</div>
