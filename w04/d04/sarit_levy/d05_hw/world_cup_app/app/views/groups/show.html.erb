<%= link_to 'All Group Teams', groups_path %>
<h1><%= @group.name %></h1>

<p><%= link_to "Edit Group", edit_group_path(@group) %></p>
<p><%= link_to "Group's Teams", teams_path(@team) %></p>


<% @group.teams.each do |team| %>
<div>
  <p><%=link_to team.title, team_path(team) %></p>
</div>
<% end %>

<% @group.players.each do |player| %>
  <div>
    <p><%=link_to player.name, player_path(player) %></p>
  </div>
<% end %>
