<h2>Edit Player</h2>

<ul>
  <% @player.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@player) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>

  <%= f.label(:photo_url) %>
  <%= f.text_field(:photo_url) %>

  <%= f.label(:position) %>
  <%= f.text_field(:position) %>

  <%= f.label(:skill_level) %>
  <%= f.text_field(:skill_level) %>

  <%= f.submit %>
  <% end %>


<div class="menu_buttons">
  <%= link_to("Back to Players", player_path(@player)) %>
  <%= link_to('Delete Player', player_path(@player), method: :delete) %>
</div>
