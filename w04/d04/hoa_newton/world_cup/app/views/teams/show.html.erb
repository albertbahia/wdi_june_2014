<h3><%= @team.country %></h3>
<p>Manager: <%= @team.manager_name %></p>
<%= link_to image_tag(@team.flag_url), team_path(@team) %>
<h4>Players</h4>
<% @team.players.map do |player| %>
	<ul>
		<li><%= link_to player.name, player_path(player) %></li>
	</ul>
<% end %>

<div>
	<%= link_to "Edit", edit_team_path(@team) %>
	<%= link_to "Delete", team_path(@team), method: :delete %>
</div>

