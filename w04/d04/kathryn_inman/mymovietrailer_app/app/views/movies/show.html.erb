<html>
  <head>
  </head>
  <body>
    <h3> <%= @movie.title %> </h3>

    <p><%= @movie.year %></p>
    <p>ID: <%= @movie.id %></p>
    <img src= "<%= @movie.poster_url %>">
    <p><%= @movie.plot %></p>
    <ul>
    <% @movie.actors.each do |actor| %>
    <li> <%= link_to actor.name, actor_path(actor) %> </li>
    <% end %>
  </ul>

<p><%= link_to "Back to all movies.", movies_path %></p>

<p><%= link_to "Edit this movie.", edit_movie_path(@movie) %></p>

<%= button_to "Delete this movie", movie_path(@movie), method: :delete %>

  </body>
</html>
