<html>
  <head>
  </head>
  <body>

    <h3>Enter info for new movie:</h3>

    <ul>
    <% @movie.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
  </ul>


    <%= form_for(@movie) do |f| %>
    <%= f.label(:title)%>
    <%= f.text_field(:title)%>

    <%= f.label(:poster_url)%>
    <%= f.text_field(:poster_url)%>

    <%= f.label(:year)%>
    <%= f.text_field(:year)%>

    <%= f.label(:plot)%>
    <%= f.text_field(:plot)%>

    <%= f.submit %>

    <% end %>

    <p><%= link_to "Back to all movies.", movies_path %></p>

  </body>
</html>
