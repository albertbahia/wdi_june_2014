<h3 class='edit'>Edit Team</h3>

<h3> Errors </h3>

<ul>
  <% @team.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@team) do |f| %>

  <%= f.label(:country) %>
  <%= f.text_field(:country) %>

  <%= f.label(:flag_url) %>
  <%= f.text_field(:flag_url) %>

  <%= f.label(:manager_name) %>
  <%= f.text_field(:manager_name) %>

  <%= f.select("group_id", Group.all.collect { |group| [group.name, group.id] })  %>

  <%= f.submit %>

<% end %>

<%= link_to('Back to Teams', teams_path) %>
