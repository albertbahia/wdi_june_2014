<h2><%= @team.country %></h2>
<h3>Manager: <%= @team.manager %></h3>
<h4>Group: <%= @team.group.name %> </h4>
<p>Players:</p> <% @team.players.each do |player| %>
  <ul>
    <li><%= link_to(player.name, player_path(player))%></li>
  </ul>
  <% end %>
<img src="<%= @team.flag_url %>">
<br>

<%= link_to('Back to Teams', teams_path) %> |
<%= link_to('Edit', edit_team_path(@team)) %> |
<%= link_to('Delete', team_path(@team), { :method => :delete }) %>
