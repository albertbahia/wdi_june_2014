<h2>All Movies</h2>

<%= link_to('Add a New Movie', new_movie_path) %><br><br>

<%= form_tag(search_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<br>

<% @movies.each do |movie| %>
  <div>
    <%= link_to image_tag(movie.poster_url), movie_path(movie) %>
    <p><b><%= movie.title %></b> (<%= movie.year %>) </p>
  </div>
<% end %>
