
<br><br><img src="<%= @actor.photo_url %>"><br><br>
<h2><%= @actor.name %></h2>

<b>Starred In:</b>
<ul>
  <% @actor.movies.each do |movie| %>
    <li><%= link_to(movie.title, movie_path(movie)) %></li>
  <% end %>
</ul>


<%= link_to('Back to All Actors', actors_path) %> |
<%= link_to("Edit #{@actor.name}", edit_actor_path(@actor)) %> |
<%= link_to("Delete #{@actor.name}", actor_path(@actor), method: :delete) %>
