<h2><%= @group.name %></h2>

<b>Teams:</b>
<% @group.teams.each do |team| %>
  <div>
    <%= link_to image_tag(team.flag_url, :size => "400x250"), team_path(team) %> <br>
    (<%= team.country %>)<br><br>
  </div>
<% end %>


<%= link_to('Back to All Groups', groups_path) %> |
<%= link_to("Edit #{@group.name}", edit_group_path(@group)) %> |
<%= link_to("Delete #{@group.name}", group_path(@group), method: :delete) %>
