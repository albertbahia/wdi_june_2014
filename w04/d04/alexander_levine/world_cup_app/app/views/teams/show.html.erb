<h6><%= link_to 'Home', groups_path %> | <%= link_to 'Back to Teams', teams_path %></h6>

<h2><%= @team.country %> | Group - <%= @group.name %></h2>
<h3><%= link_to "Edit", edit_team_path(@team) %></h3>

<div>
  <p><%= link_to(image_tag(@team.flag_url), team_path(@team)) %></p>
  <p>Manager - <%= @team.manager %></p>
</div>
<h3>Players</h3>
<div>
  <% @team.players.each do |player| %>
  <p><%= link_to(player.name, player_path(player)) %></p>
  <% end %>
</div>
