<!DOCTYPE html>
<html>
<head>
  <title>MoviesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1><a href="/">MovieTrail.er</a></h1>
    <nav>
      <ul>
        <li><%= link_to('Home', '/') %></li>
        <li><%= link_to('Movies', movies_path) %></li>
        <li><%= link_to('Actors', actors_path) %></li>
        <li><%= link_to('Trailers', trailers_path) %></li>
      </ul>
    </nav>
  </header>
  <div id="content">
    <%= yield %>
  </div>
</body>
</html>
