<h2><%= @movie.title %></h2>
<h2><%= @movie.year %></h2>
<%= link_to image_tag(@movie.poster_url), movie_path(@movie) %>
<p>
  <%= @movie.plot %>
</p>

<ul>
  <% @movie.actors.each do |actor| %>
    <li><a href="/actors/<%= actor.id %>"><%= actor.name %></a></li>
  <% end %>
</ul>


<ul>
  <% @movie.trailers.each do |trailer| %>
    <li>
      <iframe width="420" height="315" src="<%= trailer.embed_url %>" frameborder="0" allowfullscreen></iframe>
    </li>
  <% end %>
</ul>



<%= link_to('Back to Movies', movies_path) %>
<%= link_to('Edit', edit_movie_path(@movie)) %>
<%= link_to('Delete', movie_path(@movie), {method: :delete}) %>
