<h3>New Actor</h3>

<ul>
  <% @actor.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<%= form_for(@actor) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>

  <%= f.label(:photo_url, 'Photo URL') %>
  <%= f.text_field(:photo_url) %>

  <%= f.label(:movie_id) %>
  <%= select_tag(:movie_id, options_for_select(@movies.all.map {|m| [m.title,m.id]})) %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', actors_path %>
