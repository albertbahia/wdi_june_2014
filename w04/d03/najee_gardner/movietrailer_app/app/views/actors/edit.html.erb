<h3>Edit Actor</h3>

<ul>
  <% @actor.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<%= form_for(@actor) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>

  <%= f.label(:photo_url, 'Photo URL') %>
  <%= f.text_field(:photo_url) %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', actor_path(@actor) %>
