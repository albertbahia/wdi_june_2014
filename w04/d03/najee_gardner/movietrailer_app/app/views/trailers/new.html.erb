<h3>Add New Trailer</h3>

<%= form_for(@trailer) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :embed_url, 'Embed URL' %>
  <%= f.text_field :embed_url %>

  <%= f.label :movie_id %>
  <%= f.collection_select :movie_id, Movie.all, :id, :title %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', trailers_path %>
