<h3>Edit Movie</h3>

<ul>
  <% @movie.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<%= form_for(@movie) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year) %>
  <%= f.text_field(:year) %>

  <%= f.label(:poster_url, 'Poster URL') %>
  <%= f.text_field(:poster_url) %>

  <%= f.label(:plot) %>
  <%= f.text_area(:plot) %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', movie_path(@movie) %>
