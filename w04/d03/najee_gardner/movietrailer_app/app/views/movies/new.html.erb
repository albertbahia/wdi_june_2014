<h3>Add Favorite Movie</h3>

<p>search for movie to add:<p>
<%= form_tag(movie_search_path, method: "get") do %>
  <%= text_field_tag(:query, nil, placeholder: 'search movies') %>
  <%= submit_tag("Search") %>
<% end %>

<p>add movie manually: <p>
<ul>
  <% @movie.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<%= form_for(@movie) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title, placeholder: 'Required') %>

  <%= f.label(:year) %>
  <%= f.text_field(:year, placeholder: 'Required') %>

  <%= f.label(:poster_url, 'Poster URL') %>
  <%= f.text_field(:poster_url) %>

  <%= f.label(:plot) %>
  <%= f.text_area(:plot) %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', movies_path %>
