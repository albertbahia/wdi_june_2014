<h2>Edit Song</h2>

<ul>
<% @song.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>

<%= form_for(@song) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:album) %>
  <%= f.text_field(:album) %>

  <%= f.label(:preview_url, 'Preview URL') %>
  <%= f.text_field(:preview_url) %>

  <%= f.label(:artist_id) %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>

  <%= f.label(:price) %>
  <%= f.text_field(:price) %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back to Songs', songs_path %>
