<!DOCTYPE html>
<html>
<head>
  <title>Khadijah's Tunr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
    #nav {
      padding: 20px;
    }
    #nav a {
      font-size: 26pt;
      padding: 10px;
    }
    ul {
      list-style: none;
    }
    li {
      margin-bottom: 1em;
    }
    h1 {
      font-size: 40px;
      color: teal;
    }
  </style>
</head>
<body>
  <center>
  <h1>Khadijah's Tun.r</h1>
  <div id="nav">
    <%= link_to('Home', songs_path) %>
    <%= link_to('Songs', songs_path) %>
    <%= link_to('Artists', artists_path) %>
    <%= link_to('Playlists', playlists_path) %>
    <%= link_to('About', '/about') %>
  </div>

  <%= yield %>
</center>
</body>

</html>
