<h2><%= @movie.title %></h2>
<h4><%= link_to("All Movies", movies_path,) %></h4>
<h4><%= link_to("Edit Movie", edit_movie_path,) %></h4>
  <div id="info">
    <p><strong>Released:</strong> <%= @movie.year %></p>
    <p><strong>Plot:</strong> <%= @movie.plot %></p>
  </div>

  <div id="movie_img">
    <%= link_to image_tag(@movie.poster_url) %>
  </div>
