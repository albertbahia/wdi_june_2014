<h2> Add Trailer </h2>

<%= form_for @trailers, :url => {:action=>"create", :controller=>"trailers"}, :html => {:class => "trailers", :method => "POST"} do |f| %>
<div class="actions">


  <%= f.label :trailer %><br>
  <%= f.collection_select(:movie_id, Movie.all, :id, :title) %><br>

  <%= f.label :embed_url %><br>
  <%= f.text_field :embed_url %><br>

  <%= f.submit %>

<% end %>
