<h2> So you've decided to add an actor </h2>

<%= form_for @actors do |f|  %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :photo_url %><br>
  <%= f.text_field :photo_url %><br>

  <%= f.label :movie_id %><br>
  <%= f.select(:movie_id, options_from_collection_for_select(@movies, "id", "title")) %><br>

  <%= f.submit %>

<% end %>


<%= link_to('Back to Actors', actors_path) %>
