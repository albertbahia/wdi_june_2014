<h2>ADDING A MOVIE</h2>

<%= form_for @movies do |f|  %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :year %><br>
  <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %><br>
  <%= f.label :plot %><br>
  <%= f.text_area :plot %><br>
  <%= f.label :poster_url %><br>
  <%= f.text_field :poster_url %><br>
  <%= f.submit %>

<% end %>


<%= link_to('Go Back', movie_path(@movies)) %>
