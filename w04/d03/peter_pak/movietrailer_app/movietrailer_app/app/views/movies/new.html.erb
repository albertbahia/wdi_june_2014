<h2>ADDING A MOVIE</h2>
<%= link_to('click here to search the omdb database', search_movies_path) %>

<div><% @movies.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
</div>
<div>
<%= form_for @movies do |f|  %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :year %><br>
  <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %><br>
  <%= f.label :plot %><br>
  <%= f.text_area :plot %><br>
  <%= f.label :poster_url %><br>
  <%= f.text_field :poster_url %><br>
  <%= f.submit %>


<% end %>
</div>
<br><br>
<%= link_to('Back to Movies', movies_path) %>
