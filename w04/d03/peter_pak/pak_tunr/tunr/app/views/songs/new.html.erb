<h2>New Song</h2>

<form action="/songs/search" method="get">
  <label for="search">
    <input type="text" name='search' placeholder="search iTunes">
    <input type="submit" name="submit">
  </label>
</form>

<h4> OR </h4>

<ul>
<% @song.errors.full_messages.each do |msg| %>
  <li><%= msg %> </li>
<% end %>
</ul>

<%= form_for @song do |f|  %>

  <%= f.label :artist_id %>
  <%= f.select(:artist_id, options_from_collection_for_select(@artists, "id", "name")) %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :album %>
  <%= f.text_field :album %><br>

  <%= f.label :preview_url %>
  <%= f.text_field :preview_url %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.submit('create me') %>

<% end %>
