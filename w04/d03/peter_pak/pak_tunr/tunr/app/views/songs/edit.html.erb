<h2>Edit Song</h2>

<ul>
<% @song.errors.full_messages.each do |msg| %>
  <li><%= msg %> </li>
<% end %>
</ul>

<%= form_for @song do |f|  %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :album %>
  <%= f.text_field :album %><br>

  <%= f.label :preview_url %>
  <%= f.text_field :preview_url %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.submit %>

<% end %>

<%= link_to("Delete this song", song_path(@song), {method: :delete}) %>
