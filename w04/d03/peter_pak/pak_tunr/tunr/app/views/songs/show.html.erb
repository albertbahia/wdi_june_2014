<h2><%= @song.title %></h2>
<audio controls>
<source src="<%= @song.preview_url %>" type="audio/mpeg">
</audio>
<h3>By <%= @song.artist.name %></h3>
<h3>Album: <%= @song.album %></h3>


<%= link_to("Edit this song", edit_song_path(@song)) %>
<%= link_to("Delete this song", song_path(@song), {method: :delete}) %>
