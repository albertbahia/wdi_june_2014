<h2>New movie</h2>

<%= link_to "Back to Movies", movies_path %>
<br>

<%= form_for @movie do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :year %>
    <%= f.text_field :year %>
    <br>

    <%= f.label :poster_url %>
    <%= f.text_field :poster_url %>
    <br>

    <%= f.label :plot %>
    <%= f.text_field :plot %>
    <br>

    <%= f.submit %>

<% end %>
