<h2>Edit Movie</h2>

<ul>
<% @movie.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>

<%= form_for(@movie) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year) %>
  <%= f.number_field(:year) %>

  <%= f.label(:poster_url) %>
  <%= f.text_field(:poster_url) %>

  <%= f.label(:plot) %>
  <%= f.text_field(:plot)%>

  <%= f.submit %>
<% end %>

<%= link_to('Back to Movie', movie_path(@movie))%>
<%= link_to('Delete', movie_path(@movie), method: :delete)%>
