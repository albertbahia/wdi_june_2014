<h2>New Movie</h2>
<%= link_to('Back to Movies', movies_path)%>
<ul>
<% @movie.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>

<%= form_for(@movie) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year) %>
  <%= f.number_field(:year) %>

  <%= f.label(:poster_url) %>
  <%= f.text_field(:poster_url) %>

  <%= f.label(:plot) %>
  <%= f.text_field(:plot)%>

  <%= f.submit %>
<% end %>
