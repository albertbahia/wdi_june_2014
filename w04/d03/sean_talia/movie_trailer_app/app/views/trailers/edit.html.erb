<h2>Edit Trailer</h2>
<ul>
  <% @trailer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@trailer) do |f| %>
  <%= f.label(:title)%>
  <%= f.text_field(:title)%>

  <%= f.label(:embed_url)%>
  <%= f.text_field(:embed_url)%>

  <%= f.submit %>
  <% end %>
<p>
  <%= link_to('Back to Trailer', trailer_path(@trailer))%>
  <%= link_to('Delete Trailer', trailer_path(@trailer), method: :delete) %>
</p>
