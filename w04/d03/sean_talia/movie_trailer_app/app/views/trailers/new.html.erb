<h2>New Trailer</h2>
<ul>
  <% @trailer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@trailer) do |f| %>
  <%= f.label(:title)%>
  <%= f.text_field(:title)%>

  <%= f.label(:embed_url)%>
  <%= f.text_field(:embed_url)%>

  Movie
  <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>

  <%= f.submit %>
  <% end %>
<p>
  <%= link_to('Back to Trailers', trailers_path) %>
</p>
