<%= link_to 'Back to this Movie', movie_path(@movie) %>

<%= form_for @movie, method: :put do |f| %>
	Title: <%= f.text_field :title %>
	Year: <%= f.text_field :year %>
	Poster URL: <%= f.text_field :poster_url %>
	Plot: <%= f.text_field :plot %>
	<%= f.submit %>
<%end%>


<%= link_to 'Delete', movie_path(@movie), method: :delete %>