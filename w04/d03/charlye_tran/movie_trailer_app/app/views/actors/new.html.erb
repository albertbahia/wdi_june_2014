<h2> New Actor </h2>

<h3> Errors</h3>

<ul>
  <% @actor.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@actor) do |f| %>

  <%= f.label(:name) %>
  <%= f.text_field(:name) %>

  <%= f.label(:photo_url) %>
  <%= f.text_field(:photo_url) %>

  <%= f.select(:movie_id, options_for_select(@movies.map {|movie| [movie.title,movie.id]})) %>

  <%= f.submit %>

<% end %>

<%= link_to('Back to Actors', actors_path) %>
