<h2> New Trailer </h2>

<h3> Errors</h3>

<ul>
  <% @trailer.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@trailer) do |f| %>

  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:embed_url) %>
  <%= f.text_field(:embed_url) %>

  <%= f.select(:movie_id, options_for_select(@movies.map {|movie| [movie.title,movie.id]})) %>

  <%= f.submit %>

<% end %>

<%= link_to('Back to Trailers', trailers_path) %>
