<h1>Movies</h1>
<%= link_to "Add a movie", new_movie_path %>
<% @movies.each do |movie| %>
  <div>
    <h1><%= link_to movie.title, movie_path(movie) %></h1>
    <p><%= movie.year %></p>
    <p><%= movie.plot %></p>
    <%= link_to image_tag(movie.poster_url), movie_path(movie) %>
  </div>
<% end %>
