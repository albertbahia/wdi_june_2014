<h2>Edit Song</h2>

<h3>Errors</h3>
<ul>
<% @song.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>

<%= form_for(@song) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:album) %>
  <%= f.text_field(:album) %>

  <%= f.label(:preview_url) %>
  <%= f.text_field(:preview_url) %>

  <%= f.label(:artist) %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>

  <%= f.label(:price) %>
  <%= f.text_field(:price) %>

  <%= f.submit %>
<% end %>

<%= link_to('Back', song_path(@song)) %>
<%= link_to('Delete', song_path(@song), method: :delete) %>
