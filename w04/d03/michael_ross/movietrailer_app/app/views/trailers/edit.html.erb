<h2>Edit Trailer</h2>

<ul>
  <% @trailer.errors.full_messages.each do |f| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@trailer) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:embed_url) %>
  <%= f.text_field(:embed_url) %>

  <%= f.submit %>

<% end %>

<%= link_to("Back to #{@trailer.title}", trailer_path(@trailer)) %>
