<h2>Movies</h2>

<div class="add_movie"><%= link_to('Add Movie', new_movie_path) %></div>

<h3>Search:</h3>
<%= form_tag('/search', :method => :get) do %>
  <%= text_field_tag(:search_query, "") %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @movies.each do |movie| %>
  <li>
    <%= link_to(movie.title, movie_path(movie)) %><br>
    <%= link_to image_tag(movie.poster_url), movie_path(movie) %>
  </li>
  <% end %>
</ul>
