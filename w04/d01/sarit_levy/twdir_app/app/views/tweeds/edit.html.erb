<h2>Edit Tweed</h2>

<form action="/tweeds/<%= @tweed.id %>" method="post">
  <label for="tweed[author]">Author:</label>
  <input name="tweed[author]">

  <label for="tweed[content]">Content:</label>
  <input name="tweed[content]">

  <label for="tweed[image_url]">Image URL:</label>
  <input name="tweed[image_url]">

  <input type="submit">
</form>

<!-- Delete down here -->

<form action="/tweeds/<%= @tweed.id %>" method="delete">
  <label for="tweeds/"></label>
  <input name="tweeds/<%= @tweed.id %>"  type="submit" value="Delete Tweed">
</form>
