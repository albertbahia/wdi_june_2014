<h2>Edit Tweed</h2>

<form action="/<%= @tweed.id %>" method="post">
  <label>Tweed:</label>
  <input name="tweed[content]" value="<%= @tweed.content %>">

  <label>Photo URL:</label>
  <input name="tweed[image_url]" value="<%= @tweed.image_url %>">

  <label>Author:</label>
  <input name="tweed[author]" value="<%= @tweed.author %>">

  <label>Time:</label>
  <input name="tweed[timestamp]" value="<%= @tweed.timestamp %>">

  <input type="submit" value="Create">
</form>

<form action="/<%= @tweed.id %>/delete" method="post">
  <input type="submit" value="Delete Tweed" class="cta">
</form>
