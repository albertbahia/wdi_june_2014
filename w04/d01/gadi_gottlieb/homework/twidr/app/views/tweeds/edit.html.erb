<div id="title">
  <h2>Edit Tweed</h2>
</div>

<div id="hrefs">
  <a href="/">Home</a>
  <a href="/tweeds">Tweeds</a>
</div>

<div id="forms">
  <form action="/tweeds/<%= @tweed.id %>" method="post">
    <label >Author:</label>
    <input name="tweed[author]" value="<%= @tweed.author %>"><br>

    <label >Content:</label>
    <input name="tweed[content]" value="<%= @tweed.content %>"><br>

    <label >Image:</label>
    <input name="tweed[image_url]" value="<%= @tweed.image_url %>"><br>

    <input type="submit" value="Edit">
  </form>
</div>
