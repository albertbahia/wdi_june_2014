<h2>New Tweed</h2>


<form id="delete" action="/tweeds/<%= @tweed.id %>/delete" method="post"><br>
  <label>Delete Tweed</label>
  <input type="submit"  value="Delete"><br>
</form>

<form action="/tweeds/<%= @tweed.id %>" method="post">

  <label for="tweed[content]">Tweed Content:</label>
  <input name="tweed[content]" value="<%= @tweed.content %>">

  <label for="tweed[image_url]">Image URL:</label>
  <input name="tweed[image_url]" value="<%= @tweed.image_url %>">

  <input type="submit" value="Create">
</form>
