<h2>Edit Tweed</h2>

<form action="/tweeds/<%= @tweed.id %>" method="post">
  <label>Author:</label>
  <input name="tweed[author]" value="<%=@tweed.author%>">

  <label>What's your tweed?</label>
  <input name="tweed[content]" value="<%=@tweed.content%>">

  <label>Picture URL</label>
  <input name="tweed[image_url]" value="<%=@tweed.image_url%>">

  <label>Timestamp</label>
  <input name="tweed[timestamp]" value="<%=@tweed.timestamp%>">

  <input type="submit" value="Edit Your Tweed">
</form>
