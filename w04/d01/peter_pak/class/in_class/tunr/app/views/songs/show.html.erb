<h2><%= @song.title %>  </h2>
<audio controls>
<source src="<%= @song.preview_url %>" type="audio/mpeg">
</audio>
<h3>By <%= @song.artist.name %></h3>
<h3>Album: <%= @song.album %></h3>

<form action="/songs/<%= @song.id %>/delete" method="post">
  <input type="submit" value="Delete this song">
</form>
