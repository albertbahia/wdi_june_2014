<h2>Edit Painting</h2>

<%= form_for @painting do |f| %>
  <%= f.label(:img_url) %>
  <%= f.text_field(:img_url) %>

  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year_painted) %>
  <%= f.number_field(:year_painted) %>

  <%= f.label(:description) %>
  <%= f.text_field(:description) %>

  <%= f.label(:artist_id) %>
  <%= f.number_field(:artist_id) %>


  <%= f.submit %>
<% end %>

<%= link_to('Back', painting_path(@painting)) %> |
<%= link_to('Delete This Painting', painting_path(@painting), method: :delete) %>
