<h2>New Painting</h2>

<%= form_for @painting do |f| %>
  <%= f.label(:img_url) %>
  <%= f.text_field(:img_url) %>

  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year_painted) %>
  <%= f.number_field(:year_painted) %>

  <%= f.label(:description) %>
  <%= f.text_field(:description) %>

  <%= f.select(:artist_id, Artist.all.collect { |a| [a.name, a.id]})%>


  <%= f.submit %>
<% end %>

<%= link_to('Back to Paintings', paintings_path) %>
