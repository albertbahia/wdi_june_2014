<h3>Edit painting</h3>

<%= form_for(@painting) do |f| %>
  <%= f.label(:img_url, 'Image URL') %>
  <%= f.text_field(:img_url) %>

  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:year_painted) %>
  <%= f.text_field(:year_painted) %>

  <%= f.label(:description) %>
  <%= f.text_field(:description) %>

  <%= f.label(:artist_id) %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back to Painting', painting_path(@painting) %>
