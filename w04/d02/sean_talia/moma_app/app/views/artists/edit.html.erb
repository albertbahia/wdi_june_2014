<h2>Edit Artist</h2>
<div class="form">
<%= form_for(@artist) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>

  <%= f.label(:photo_url) %>
  <%= f.text_field(:photo_url) %>

  <%= f.label(:nationality) %>
  <%= f.text_field(:nationality) %>

  <%= f.label(:birthday) %>
  <%= f.text_field(:birthday) %>

  <%= f.submit %>
  <% end %>
</div>

<%= link_to('Delete Artist', artist_path(@artist), method: :delete) %>
<%= link_to('Back to Artist', artist_path(@artist))%>
