<h2>New Painting</h2>
<div class="form">
<%= form_for(@painting) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:image_url) %>
  <%= f.text_field(:image_url) %>

  <%= f.select(:artist_id, Artist.all.collect{ |a| [a.name, a.id]}, {include_blank: 'Select Artist'}) %>

  <%= f.label(:year_painted) %>
  <%= f.text_field(:year_painted) %>

  <%= f.label(:description) %>
  <%= f.text_field(:description) %>

  <%= f.submit %>
  <% end %>
</div>
<%= link_to('Back to Paintings', paintings_path)%> <br>
