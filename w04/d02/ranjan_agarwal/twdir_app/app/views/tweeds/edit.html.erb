<h2>Edit Tweed</h2>



<%= form_for(@tweed) do |f| %>
  <%= f.label(:content) %>
  <%= f.text_field(:content) %>

  <%= f.label(:image_url) %>
  <%= f.text_field(:image_url) %>

  <%= f.submit %>
<% end %>
<%= link_to("Back to #{@tweed.author} Tweed", tweed_path(@tweed)) %>
<%= link_to('Delete', tweed_path(@tweed), {method: :delete}) %>
