<h2>Edit Tweed</h2>

<form action="/tweeds/<%= @tweed.id %>" method="post">
  <label for="tweed[author]">Author:</label>
  <input name="tweed[author]" value="<%= @tweed.author %>">

  <label for="tweed[content]">Content:</label>
  <input name="tweed[content]" value="<%= @tweed.content %>">

  <label for="tweed[image_url]">Image URL:</label>
  <input name="tweed[image_url]" value="<%= @tweed.image_url %>">

  <input type="submit" value="Update">>
</form>

<%= link_to('Back', tweed_path(@tweed)) %>
<%= link_to('Delete', tweed_path(@tweed), method: :delete) %>
