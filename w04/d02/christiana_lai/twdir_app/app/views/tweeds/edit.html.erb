<h2>Edit Tweed</h2>

<%= form_for (@tweed) do |f| %>
  <%= f.label(:content) %>
  <%= f.text_field(:content) %>

  <%= f.label(:author) %>
  <%= f.text_field(:author) %>

  <%= f.label(:img_url) %>
  <%= f.text_field(:img_url) %>

  <%= f.submit %>
<% end %>

<%= link_to('Delete', tweed_path(@tweed), {method: :delete}) %><br>
<%= link_to("Home", tweed_path) %>
