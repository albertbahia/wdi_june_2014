<h2><%= @artist.name %></h2>
<img src="<%= @artist.photo_url %>">
<h3><%= @artist.nationality %></h3>

<ul>
  <% @artist.paintings.each do |painting| %>
    <li><%= painting.title %></li>
    <li><a href="/paintings/<%= painting.id %>">
    <img src= "<%= painting.img_url %>">
    </a></li>

  <% end %>
</ul>

<%= link_to('Back to Artists', artists_path) %><br>
<%= link_to('Edit', edit_artist_path(@artist)) %><br>
<%= link_to('Delete', artist_path(@artist), {method: :delete}) %><br>
<%= link_to('View Paintings', paintings_path) %><br>
