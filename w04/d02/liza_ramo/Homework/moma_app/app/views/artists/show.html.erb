
<div class="artist">
  <h4><%= @artist.name %></h4>
  <ul>
    <li>Born: <%= @artist.birthday %></li>
    <li>Nationality: <%= @artist.nationality%></li>
    <%= link_to "Edit", edit_artist_path(@artist) %>
  </ul>
</div>

<div class="paintings">
  <% @artist.paintings.each do |painting| %>
  <h2><%= painting.title %></h2>
  <img src="<%= painting.img_url %>">
  <p><%= link_to "View Painting", painting_path(painting) %></p>
  <% end %>
</div>
