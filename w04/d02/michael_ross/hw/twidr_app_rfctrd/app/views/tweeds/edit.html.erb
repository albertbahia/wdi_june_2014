<h2>EDIT TWEED</h2>

<%= form_for(@tweed) do |f| %>
  <%= f.label(:author) %>
  <%= f.text_field(:author) %>

  <%= f.label(:image_url) %>
  <%= f.text_field(:image_url) %>

  <%= f.label(:content) %>
  <%= f.text_field(:content) %>

  <%= f.submit %>

<% end %>


<%= link_to('Delete', tweed_path(@tweed), method: :delete) %>
