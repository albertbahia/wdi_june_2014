<%= form_for(@song) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:album) %>
  <%= f.text_field(:album) %>

  <%= f.label(:preview_url) %>
  <%= f.text_field(:preview_url) %>

  <%= f.label(:artist_id) %>
  <%= f.text_field(:artist_id) %>

  <%= f.label(:price) %>
  <%= f.text_field(:price) %>

  <%= f.submit %>

<% end %>


<%= link_to('Back to all songs', songs_path) %>
<%= link_to("Back to #{@song.title}", song_path(@song)) %>
<%= link_to('Delete', song_path(@song), method: :delete) %>
