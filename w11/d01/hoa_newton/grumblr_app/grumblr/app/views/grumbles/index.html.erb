<h1>Listing grumbles</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Content</th>
      <th>Title</th>
      <th>Image</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grumbles.each do |grumble| %>
      <tr>
        <td><%= grumble.author %></td>
        <td><%= grumble.content %></td>
        <td><%= grumble.title %></td>
        <td><%= grumble.image %></td>
        <td><%= grumble.avatar %></td>
        <td><%= link_to 'Show', grumble %></td>
        <td><%= link_to 'Edit', edit_grumble_path(grumble) %></td>
        <td><%= link_to 'Destroy', grumble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grumble', new_grumble_path %>
