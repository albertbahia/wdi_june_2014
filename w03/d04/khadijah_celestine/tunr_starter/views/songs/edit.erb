<h2>New Song</h2>

<form action="/songs" method="post">
  <label for="song[title]">Title:</label>
  <input name="song[title]" value="<%= @song.title %>">

  <label for="song[album]">Album:</label>
  <input name="song[album]" value="<%= @song.album %>">

  <label for="song[preview_url]">Preview Link:</label>
  <input name="song[preview_url]" value="<%= @song.preview_url %>">

  <label for="song[artist]">Artist id:</label>
  <input name="song[artist]" value="<%= @song.artist_id %>">

  <label for="song[price]">Price:</label>
  <input name="song[price]" value="<%= @song.price %>">

  <input type="submit" value="Create">
</form>
