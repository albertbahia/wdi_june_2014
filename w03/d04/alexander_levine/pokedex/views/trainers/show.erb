<h6><a href="/trainers">Back to Trainer List</a></h6>

<h2><%= @trainers.name %></h2>

<ul>
  <li>age: <%= @trainers.age %></li>
  <li>hometown: <%= @trainers.hometown %></li>
</ul>

<ul>
  <% @trainers.pokemons.each do |pokemon| %>
  <li> <%= pokemon.name %> <img src = "<%= pokemon.img_url %>"</li>
    <% end %>
</ul>

<h3><a href="/trainers/<%= @trainers.id %>/edit">Edit Trainer</a></h3>

  <% if @trainers.pokemons.length < 1 %>
  <form action="/trainers/<%= @trainers.id %>/get_pokemon" method="post">
    <input type="submit" value="Get Pokemon">
  </form>
    <% end %>

<form action="/trainers/<%= @trainers.id %>/delete" method="post">
  <input type="submit" value="Delete Trainer">
</form>
