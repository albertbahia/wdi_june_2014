<html>
  <head>
    <title>WDInstagram</title>
    <link href="<%= url('/style.css') %>" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <style>

      body {background-color: #D7D7D7;margin: 0;}
      header {width: 100%;height: 70px;background:#316087;}
      .header-content {width: 1040px;margin: 0 auto;}
      header h1 {float: left;margin: 14px 0 0 0;}
      header h1 a {color: #FFF;text-decoration: none;font-family: 'Lobster', cursive;font-weight: 300;}
      nav {float: right;}
      nav ul {list-style-type: none;margin-top: 28px;float: right;}
      nav ul li {float: left;margin: 0 10px;}
      nav ul li a {color: #FFF;text-decoration: none;}
      #main {width: 1040px;margin: 20px auto;}
      .image-list {width: 100%;list-style-type: none;background-color: #EAEAEA;margin: 0 0 20px 0;float: left;padding-left: 0;box-shadow:0 1px 1px rgba(0,0,0,.24),0 1px 5px rgba(0,0,0,.05)}
      .image-list li {width: 25%;float: left;padding: 20px;text-align: center;margin: 20px;background: #FFF;box-shadow: 0 1px 1px rgba(0,0,0,.24),0 1px 5px rgba(0,0,0,.05);border-radius: 2px;}
      .image-list li a {color: #3F4755;text-decoration: none;}
      .image-list li a p {margin: 5px 0;}
      .image-list li img {width: 200px;height: 200px;margin-bottom: 5px;}
      p, a {font-family: 'Lato', sans-serif;}
      .single-image {background: #FFF;float: left;width: 100%;margin-bottom:20px;}
      .single-image img {float: left;margin-right: 20px;width: 640px;height: 640px;}
      .image-content {float: left;margin-top: 15px;width: 360px;}
      .image-content p {margin: 8px 0;}
      .image-author {color: #316087;text-decoration: none;}
      .edit-image {float: right;padding: 8px;border:2px solid #316087;color: #316087;text-decoration: none;font-size: 14px;border-radius: 3px;transition: background-color 0.5s ease;margin-bottom: 15px;}
      .edit-image:hover {background:#316087;color: #FFF;}
      .delete {float: right;clear: both;}
      .delete input {width: 84px;background: #FFF;border:2px solid #316087;color:#316087;font-size: 14px;border-radius: 3px;padding: 7px;transition: background-color 0.5s ease;cursor: pointer;}
      .delete input:hover {background:#316087;color: #FFF;}

      h3,label {font-family: 'Lato', sans-serif;}
      label {}
      .image-form {width: 500px;margin: 0 auto;padding: 30px;box-shadow:0 1px 1px rgba(0,0,0,.24),0 1px 5px rgba(0,0,0,.05);background:#f4f4f4;}
      .image-form input[type="text"] {width: 100%;padding: 8px;margin-bottom: 10px;outline:none;transition: border 0.5s ease;border:3px solid #316087;background:#fefefe;}
      .image-form input[type="text"]:focus {border-color: #313947}
      .form-button {width: 300px;margin-left: 100px;background: #FFF;border: 3px solid #316087;padding: 15px;font-size: 18px;cursor: pointer;color: #316087;transition: background-color 0.5s ease;}
      .form-button:hover {background:#316087;color: #FFF;border:3px solid #FFF;}

      footer {width: 100%;float: left;}
      footer p {width: 1040px;text-align: right;margin:0 auto 20px auto;}
    </style>
  </head>
  <body>
  <header>
    <div class="header-content">
      <h1><a href="/">WDInstagram</a></h1>
      <nav>
        <ul>
          <li><a href="/images">Images</a></li>
          <li><a href="/images/new">New Image</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <div id="main">
    <%= yield %>
  </div>
  <footer>
    <p>A HAMCo. Product &copy;</p>
  </footer>
  </body>
</html>
