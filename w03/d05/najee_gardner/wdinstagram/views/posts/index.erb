<div class="all_posts">
  <div class="log_box">
    <p>Logged In As:</p>
    <h3><%= @user.username %></h3>
    <form method="post" action="/logout">
      <input type="hidden" name="user_id" value="<%= @user.id %>">
      <input type="submit" value="LOGOUT">
    </form>
  </div>
  <a class="new_post" href="/posts/<%= @user.username %>/<%= @user.visit_key %>/new">New Post</a>
  <% Post.all.order(post_date: :desc).each do |post| %>
  <div class="post_box">
    <p><%= post.user.username %></p>
    <p><%= post.post_date %></p>
    <a class="pic" href="/posts/<%= @user.username %>/<%= @user.visit_key %>/<%= post.id %>"><img src="<%= post.image_url %>"></a>
    <p><%= post.caption %></p>
  </div>
  <% end %>
</div>
