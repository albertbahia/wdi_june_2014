<html>
  <head>
    <style>
    body {
      background-color: rgba(0, 20, 60, 0.15);
      text-align: center;
      font-family: "Arial", sans-serif;
      color: black;
      position: center;
    }
    p {
      text-align: center;
      font-family: "Arial", sans-serif;
      color: blue;
      position: inline;
    }
    img {
      border: solid;
      position: center;
    }
    </style>
  </head>
  <body>
    <h5><a href="/images" >Back to all images.</a></h5>

    <img src="<%= @image.img_url %>">
    <p>posted on: <%= @image.date_posted %></p>
    <p>by: <%= @image.user.name %></p>

    <p><a href= "/images/<%= @image.id %>/edit" >Edit this image.</a></p>

    <form action="/images/<%= @image.id %>/delete" method="post">
      <input type="submit" value="Delete this image.">
    </form>
  </body>
</html>
