<% def math
<% case @operation %>
<% when "+" %>
<%   answer = @first_num + @second_num %>
<% when "-" %>
<%   answer = return @first_num + @second_num %>
<% when "x" %>
<%   answer = return @first_num + @second_num %>
<% when "&divide;" %>
<%   answer = return @first_num + @second_num %>
<% end %>
<% end %>
