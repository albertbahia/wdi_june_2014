<h4>ADD USER</h4>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@user) do |f| %>
  <%= f.label(:username) %>
  <%= f.text_field(:username) %>

  <%= f.label(:first_name) %>
  <%= f.text_field(:first_name) %>

  <%= f.label(:last_name) %>
  <%= f.text_field(:last_name) %>

  <%= f.label(:password) %>
  <%= f.password_field(:password) %>

  <%= f.label(:password_confirmation) %>
  <%= f.password_field(:password_confirmation) %>

  <%= f.submit %>
<% end %>
