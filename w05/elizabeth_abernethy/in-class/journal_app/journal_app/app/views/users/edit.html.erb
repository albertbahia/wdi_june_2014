<h2>Edit this User</h2>


<ul>
<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>

<%= form_for(@user) do |f| %>
  <%= f.label(:username) %>
  <%= f.text_field(:username) %><br>

  <%= f.label(:first_name) %>
  <%= f.text_field(:first_name) %><br>

  <%= f.label(:last_name) %>
  <%= f.text_field(:last_name) %><br><br>

  <%= f.submit 'Submit Changes' %>
<% end %><br><br>

<%= link_to("Back to #{@user.username}", user_path(@user)) %> |
<%= link_to("Delete #{@user.username}", user_path(@user), method: :delete ) %>
