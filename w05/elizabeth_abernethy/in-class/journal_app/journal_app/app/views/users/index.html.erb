<h3>Users</h3>

<b><%= link_to('Sign Up', new_user_path) %></b><br><br>

<% @users.each do |user| %>
  <%= user.id %><br>
  <b><%= user.username %></b><br>
  <%= "#{user.first_name} #{user.last_name}" %><br>
  <%= user.password_digest %><br>
  <%= link_to 'View', user_path(user) %> |
  <%= link_to 'Remove', user_path(user), method: :delete %> |
  <%= link_to 'Edit', edit_user_path(user) %>
  <hr>
<% end %>
