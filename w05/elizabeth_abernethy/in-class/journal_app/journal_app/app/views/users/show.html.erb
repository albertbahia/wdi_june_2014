<h2><%= @user.username %></h2><hr>
<p><b>First name:</b> <%= @user.first_name %><br>
<b>Last name:</b> <%= @user.last_name %><br>
<b>Password:</b> <%= @user.password_digest %><hr><br><br><br>

<%= link_to('Back to All Users', users_path) %> |

<% if session[:current_user] == @user.id %>
  <%= link_to("Edit #{@user.username}", edit_user_path(@user)) %> |
  <%= link_to("Delete #{@user.username}", user_path(@user), method: :delete) %>
<% end %>
