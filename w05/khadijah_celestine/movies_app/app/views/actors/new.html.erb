<ul>
  <% @actor.errors.full_messages.each do |error_msg| %>
    <li class="errors"><%= error_msg %></li>
  <% end %>
</ul>

<%= form_for @actor do |f| %>
  <div class="input">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>  
  <div class="input">
  <%= f.label :photo_url %>  
  <%= f.text_field :photo_url %>
  </div>

  <%= f.submit %>
<% end %>
