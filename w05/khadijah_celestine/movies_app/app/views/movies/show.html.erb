<h1><%= @movie.title %></h1>
<p><%= @movie.year %></p>
<%= link_to "Edit Movie", edit_movie_path(@movie) %>
<p><%= image_tag(@movie.poster_url) %></p>
<p><%= @movie.plot %></p>

<h3>Actors</h3>
<% @movie.actors.each do |actor| %>
<p> <%= actor.name %> </p>
<img src="<%= actor.photo_url %>">
<% end %>

<h3> Trailer </h3>
<% @movie.trailers.each do |trailer| %>
	<%= trailer.title %></p>
	<iframe width="420" height="315" src="http://www.youtube.com/embed/wZdpNglLbt8" frameborder="0" allowfullscreen></iframe>
<% end %>
